<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
                      http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">

    <persistence-unit name="E-CommercePU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>entitynew.Admin</class>
        <class>entitynew.Product</class>
        <class>entitynew.BuyerBuyProduct</class>
        <class>entitynew.Buyer</class>
        <class>entitynew.CartProductID</class>
        <class>entitynew.CreditCard</class>
        <class>entitynew.ShoppingCart</class>
        <class>entitynew.Category</class>
        <class>entitynew.User</class>
        <class>entitynew.CartProduct</class>
        <class>entitynew.BuyerBuyProductID</class>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/ecommerce"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="root"/>
            <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
            <property name="javax.persistence.schema-generation.schema.action" value="drop-and-create"/>
            <property name="javax.persistence.schema-generation.scripts.create-target" value="ecommerceCreate.ddl"/>
            <property name="javax.persistence.schema-generation.scripts.drop-target" value="ecommerceDrop.ddl"/>

            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect"/>
            <!--<property name="hibernate.hbm2ddl.auto" value="create-drop"/>
            <property name="show_sql" value="true"/>
            <property name="hibernate.temp.use_jdbc_metadata_defaults" value="false"/>-->
        </properties>
    </persistence-unit>
</persistence>
